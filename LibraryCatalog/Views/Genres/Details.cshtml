@{
  Layout = "_Layout";
}

@model LibraryCatalog.Models.Genre;

<h2>Genre Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>There are no titles that fall under this genre</p>
}
else
{
  <h4>@Html.DisplayFor(model => model.Name) Books:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Book.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to genres", "Index")</p>
<p>@Html.ActionLink("Edit genre", "Edit", new { id = Model.GenreId })</p>
<p>@Html.ActionLink("Delete Genre", "Delete", new { id = Model.GenreId })</p>