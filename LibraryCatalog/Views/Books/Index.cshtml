@{
  Layout = "_Layout";
}

@using System.Linq;
@using LibraryCatalog.Models;
@model List<LibraryCatalog.Models.Book>

<h1>Books</h1>
<div>
@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 

<ul>
  @foreach(Book book in Model.OrderBy(book => book.Name))
  {
    <li>@Html.ActionLink($"{book.Name}", "Details", new { id = book.BookId })</li>
  }
</ul>
</div>
<p>@Html.ActionLink("Add new book", "Create")</p>
